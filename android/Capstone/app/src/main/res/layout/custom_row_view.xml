        <!--android:layout_height="fill_parent"-->
        <!--android:id="@+id/text4"-->
        <!--android:textSize="14sp"-->
        <!--android:textStyle="italic"-->
        <!--android:typeface="sans"-->
        <!--android:textColor="#FFFFFF" />-->

</LinearLayout>
